# AI Blog Platform - Production Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=5001
FRONTEND_URL=http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/ai-blog-platform
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ai-blog-platform

# =============================================================================
# AI SERVICES
# =============================================================================
# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
# Get from: https://makersuite.google.com/app/apikey

# =============================================================================
# CLOUD STORAGE
# =============================================================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=your-s3-bucket-name

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# Google Sheets API (for manual keywords)
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SHEETS_RANGE=Sheet1!A:Z

# Google Service Account (for advanced features)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"

# =============================================================================
# WORDPRESS INTEGRATION
# =============================================================================
# WordPress Site Configuration
WORDPRESS_SITE_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your_wp_username
WORDPRESS_PASSWORD=your_wp_app_password
# Note: Use Application Password, not regular password
# Generate at: WordPress Admin > Users > Profile > Application Passwords

# =============================================================================
# NEWS & TRENDS APIs
# =============================================================================
# NewsData.io API
NEWSDATA_API_KEY=your_newsdata_api_key
# Get from: https://newsdata.io/

# GNews API
GNEWS_API_KEY=your_gnews_api_key
# Get from: https://gnews.io/

# RapidAPI Key (for additional news sources)
RAPIDAPI_KEY=your_rapidapi_key
# Get from: https://rapidapi.com/

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Secret for authentication (if implemented)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable detailed logging
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Cache TTL in seconds
CACHE_TTL=3600

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_IMAGE_GENERATION=true
ENABLE_WORDPRESS_DEPLOYMENT=true
ENABLE_GOOGLE_SHEETS_SYNC=true
ENABLE_TREND_ANALYSIS=true
ENABLE_SEO_OPTIMIZATION=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Only for development/testing environments
ENABLE_CORS=true
ENABLE_SWAGGER_DOCS=false
ENABLE_DEBUG_ROUTES=false

# Test data configuration
USE_FALLBACK_CONTENT=true
ENABLE_MOCK_SERVICES=false

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Database backup configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Cleanup configuration
ENABLE_AUTO_CLEANUP=true
CLEANUP_INTERVAL_HOURS=6
MAX_DRAFT_AGE_DAYS=7
